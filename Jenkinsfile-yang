pipeline {
    agent any
    environment {
        DB_HOST = 'localhost'
        DB_PORT = '6033'
        DB_NAME = 'gradebook'
        DB_USER = 'grade_admin'
        DB_PASS = credentials('DB_PASS_CREDENTIAL_ID')
        }
    stages {
        stage('Checking') {
            steps {
                git branch: 'main', url: 'https://github.com/jiakeke/SEP1.git'
            }
        }
        stage('Build') {
            steps {
                bat 'mvn -f GradeBook/pom.xml clean install'
            }
        }

        stage('Test & Coverage') {
            steps {
                bat 'mvn -f GradeBook/pom.xml test ' // Run tests and generate a JaCoCo coverage report
            }

            post {
                always {
                    junit 'GradeBook/target/surefire-reports/*.xml' // Publish JUnit test results
                    
                }
            }

        }
   
    }
}
